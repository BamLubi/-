/* pages/template/template.wxss */

/* 主体 */

.template_body {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
    margin: 20rpx 20rpx 10rpx 20rpx;
}

/* 时间 */

.template_time {
    font-weight: bold;
    margin-top: 7px;
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-content: center;
}

/* 地点/方向 */

.template_place {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    width: 100%;
    margin: 4px 0px 4px 0px;
}

.template_place image {
    height: 40px;
    width: 50px;
}

.template_place text {
    margin-top: 5px;
    font-weight: bold;
    font-size: 19px;
    font-family: "Microsoft YaHei";
}

/* 备注信息 */
.template_info {
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
    width: 100%;
	padding-left: 30rpx;
	padding-bottom: 10rpx;
	padding-top: 10rpx;
	background-color: #f3f2f2;
}

.template_info .site{
	margin-top: 10rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.template_info .site text{
	margin-right: 10rpx;
}