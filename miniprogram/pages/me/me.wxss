/* miniprogram/pages/me/me.wxss */
/* 顶部 */
.head {
	display: flex;
	flex-direction: column;
	align-items: center;
	background-color: #8a2be2;
	height: 300rpx;
	border-bottom-left-radius: 40rpx;
	border-bottom-right-radius: 40rpx;
}

.head .userAvatar {
	overflow: hidden;
	width: 160rpx;
	height: 160rpx;
	margin: 20rpx;
	border-radius: 50%;
	border: 2px solid #fff;
	box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.head .userNickName {
	color: white;
	margin-bottom: 20rpx;
	font-size: 38rpx;
	font-weight: 600;
}

.head .userButton {
	margin-bottom: 20rpx;
	background-color: rgb(0, 214, 107);
	color: rgb(255, 255, 255);
	border-radius: 98rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}

/* 工具条 */
.child {
	width: 100%;
}

.child image {
	width: 50rpx;
	height: 50rpx;
	margin-right: 20rpx;
}

.child text {
	font-size: 35rpx;
}

.me-nav-btn {
	background-color: rgb(255, 255, 255);
	border-radius: 0rpx;
	display: inline-block;
	line-height: 1;
	margin-left: 0rpx;
	padding-left: 0rpx;
	display: table-cell;
}

.me-nav-btn::after {
	/*button的边框样式是通过::after方式实现的*/
	border: none;
}

.me-nav-btn image {
	width: 50rpx;
	height: 50rpx;
	margin-right: 20rpx;
}

.me-nav-btn text {
	font-size: 35rpx;
}