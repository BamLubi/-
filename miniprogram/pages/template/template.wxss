/* pages/template/template.wxss */

/* 主体 */

.body {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 12px;
    margin: 20rpx 40rpx 20rpx 40rpx;
}

/* 时间 */

.time {
    font-weight: bold;
    font-size: 20px;
    margin-top: 7px;
}

/* 地点/方向 */

.place {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    width: 100%;
    margin: 4px 0px 4px 0px;
}

.place image {
    height: 40px;
    width: 50px;
}

.place text {
    margin-top: 5px;
    font-weight: bold;
    font-size: 19px;
    font-family: "Microsoft YaHei";
}

/* 备注信息 */

.remark {
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
    width: 100%;
    height: 25px;
    background-color: #e6e6e6;
}

.remark text {
    font-family: "宋体";
    line-height: 45rpx;
    font-size: 17px;
    vertical-align: middle;
    margin-right: -2000rpx; /*  影响一行存放的内容长度 */
    display: inline-block;
}

.remark .scroll-view {
    vertical-align: middle;
    padding-left: 5%;
	width: 90%;
}
