/* miniprogram/pages/index/index.wxss */
@import "../template/template.wxss";

/* 头部 */
.head {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    flex-grow: 10;
	/* margin-bottom: 4px; */
}

.head .destination {
    font-size: 20px;
}

.head image {
    width: 40px;
    height: 30px;
    margin: 5px 25px 5px 25px;
}
.head image :hover{
	animation: gif 1.4s none;
}

@keyframes gif {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }

    100% {
        -webkit-transform: rotate(180deg);
        transform: rotate(180deg);
    }
}

/* 消息 */
.message{
	width: 100%;
}

.message text{
	font-size: 16px;
	margin: 2px 0px 2px 4px;
}

/* 班车列表 */
.busList {
    display: flex;
    flex-direction: column;
}

.bottom{
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}
.bottom text{
	font-size: 15px;
	color: #8a8a8a;
}
