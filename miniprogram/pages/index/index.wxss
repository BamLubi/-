/* 工具栏 */
.service-img{
	width: 75rpx;
	height: 75rpx;
}

/* 公告栏 */
.notice{
	position: fixed;
	top: 0px;
	height: 5vh;
	width: 94vw;
	margin-left: 3vw;
	margin-right: 3vw;
	line-height: 100%;
	background-color: #fffbe8;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	align-content: center;
	border-radius: 10rpx;
	color: #ed6a0c;
}

.notice-title, .notice-close{
	float: left;
}

.notice-title{
	white-space: nowrap;
}

.notice swiper {
	width: 100%;
	height: 100%;
}

.notice swiper-item view{
	height: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	/* text-overflow: ellipsis; */
	white-space: nowrap;
	/* overflow: hidden; */
	animation: notice_move 10s linear infinite normal;
}

@keyframes notice_move{
	0%{
		transform: translateX(0px);
	}
	100%{
		transform: translateX(-380px);
	}
}