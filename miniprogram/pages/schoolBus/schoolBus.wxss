/* miniprogram/schoolBusPackage/pages/index/index.wxss */

/* 遮罩层选择地点 */
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    opacity: 0.7;
}

.choosePosition {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    justify-content: space-around;
}

.choosePosition .title {
    display: flex;
    justify-content: center;
    color: black;
    font-size: 20px;
}

.choosePosition .info {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    border-radius: 10px;
    height: 7.7vh;
}

.choosePosition .info text {
    font-size: 22px;
}

.choosePosition button {
    font-size: 40rpx !important;
    font-weight: bold;
}

/* 顶部地点选择 */

.placeSelect {
    background-color: #2684fe;
    position: fixed;
    width: 100vw;
    height: 6vh;
}

.placeSelect .place {
    font-size: 50rpx;
    font-weight: bold;
    color: white;
}

/* 头部时间选择 */
.timeSelect {
    background-color: #2684fe;
    position: fixed;
    width: 100vw;
    height: 6vh;
    top: 5vh;
}

.timeSelect text {
    font-size: 30rpx;
    font-weight: normal;
    color: white;
}

.change {
    padding-left: 2vw;
    padding-right: 2vw;
    border-radius: 15rpx;
    color: #2684fe;
    font-weight: normal;
    background-color: #fff;
}

/* 班车卡片列表 */
.busInfo{
    position: fixed;
    height: 88vh;
    top: 12vh;
}